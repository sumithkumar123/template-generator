# This tells Replit how to run your project.
# It installs all dependencies and then starts the backend and frontend servers concurrently.
run = "npm --prefix frontend install && pip install -r backend/requirements.txt && concurrently \"npm --prefix frontend run dev\" \"uvicorn backend.app.main:app --host 0.0.0.0 --port 8000\""
modules = ["python-3.11", "nodejs-20"]

# We need to tell Replit's package manager to install the 'concurrently' tool,
# which allows us to run multiple commands at once.
[packager]
[packager.features]
packageSearch = true
guessImports = true

[[deps.pip]]
files = ["backend/requirements.txt"]

[[deps.npm]]
files = ["frontend/package.json"]

[[packages]]
[packages.concurrently]
version = "latest"
type = "npm"

[nix]
channel = "stable-25_05"
packages = ["freetype", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "swig", "xcbuild"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
